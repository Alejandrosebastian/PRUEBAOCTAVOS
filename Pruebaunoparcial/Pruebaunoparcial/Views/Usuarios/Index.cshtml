@model IEnumerable<Pruebaunoparcial.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a href="#" data-toggle="modal" data-target="#IngresoUsuario">Nuevo_Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Fecha_Nacimiento
                </th>
                <th>
                    Sexo
                </th>
                <th>
                    Nacionalidad
                </th>
                <th>
                    Fecha_Alta
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Email
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    EstadoCivil
                </th>
                <th>
                    Numero Hijos
                </th>
                <th>
                    Numero Seguridad Social
                </th>
                <th>
                    Identificacion
                </th>
                <th>
                   N Identificacion
                </th>
                <th>
                    Permiso Trabajo
                </th>
                <th>
                    Permiso Recidencia
                </th>
                <th>
                    Empadronado
                </th>
                <th>
                    Tipo Licencia
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="ListaUsuario">
</table>
<div class="modal fade" id="IngresoUsuario" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Usuario
                </h4>
            </div>
            <div class="modal-body">

                <form>
                    <div class="form-group">
                        <label class="control-label">Usuario</label>
                        <input id="usuario" name="usuario"
                               placeholder="Ingrese el nombre"
                               class="form-control" />
                        <input id="UsuarioId" name="UsuarioId" hidden />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="grabaUsuario();">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>
