@model IEnumerable<Pruebaunoparcial.Models.Empleo>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a href="#" data-toggle="modal" data-target="#IngresoDesempleados">Ingrese empleos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cargo
            </th>
            <th>
                Empresa
            </th>
            <th>
                Fecha de inicio
            </th>
            <th>
                Fecha de fin
            </th>
            <th>
                Mediador
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="Listaempleos"></tbody>
</table>
<div class="modal fade" id="IngresoEmpleos" tabindex="-1"
     role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Empleos
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="control-label">tiempo</label>
                        <input id="tiempo" name="tiempo" class="form-control" placeholder="ingrese el tiempo" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">fecha inicio</label>
                        <input id="fecha_ini" name="fecha_fin" class="form-control" placeholder="ingrese el tiempo" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">fecha fin</label>
                        <input id="fecha_fin" name="fecha_fin" class="form-control" placeholder="ingrese el tiempo" />
                    </div>
                    <input id="DesempleadoId" name="DesempleadoId" hidden />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" data-toggle="tooltip"
                        title="con este boton usted guradara un nuevo cliente" onclick="grabaempleos()">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>
